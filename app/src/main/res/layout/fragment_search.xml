<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/searchFragment">


    <no.lqasse.zoff.LoadingAnimation
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/search_fragment_loading_animation"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="false"
        app:iconColor="@color/background_dark"
        app:visible="false"
        android:layout_centerInParent="true"
        android:background="@drawable/loading_animation_background"
        android:elevation="5dp"
        android:visibility="invisible" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/searchFragmentListView"
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        android:clipToPadding="false"
        android:dividerHeight="5dp"
        android:divider="#00000000"

        android:paddingTop="70dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

</RelativeLayout>